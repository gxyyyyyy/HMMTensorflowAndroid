<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialogdown_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_52dp"
        android:background="@drawable/common_dialogup_bg"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:text="选择仓库"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_17sp" />

    <LinearLayout
        android:id="@+id/query_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp">

        <EditText
            android:id="@+id/input_info_et"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_gray2dp_bg"
            android:hint="查询条件"
            android:padding="@dimen/dimen_5dp"
            android:textSize="@dimen/textsize_16sp" />

        <TextView
            android:id="@+id/query_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:text="查询"
            android:textColor="@color/color_969696"
            android:textSize="@dimen/textsize_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ListView
            android:id="@+id/dialog_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:divider="@null"
            android:dividerHeight="@dimen/dimen_0dp" />
    </LinearLayout>

</LinearLayout>