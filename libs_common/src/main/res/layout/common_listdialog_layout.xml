<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="236dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialogdown_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_52dp"
        android:background="@drawable/common_dialogup_bg"
        android:paddingLeft="@dimen/dimen_12dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:text="选择仓库"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ListView
            android:id="@+id/dialog_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:divider="@null"
            android:dividerHeight="@dimen/dimen_0dp" />
    </LinearLayout>

</LinearLayout>